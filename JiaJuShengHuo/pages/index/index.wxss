
page {
  width: 100%;
  height: 100%;
}

.swiperView {
  margin: 10rpx;
  /* padding: 10rpx; */
}
.bannerImage {
  width: 750rpx;
  height: 400rpx;
}

/*item 整体布局*/
.item_view {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin: 10rpx;
}

/*item标题*/
.item_title_text {
  font-size: 40rpx;
  text-align: left;
  /*margin-bottom: 10rpx;*/
  margin: 10rpx;
}


/*summary显示的View*/
.item_view .item_summary_view {
  display: flex;
  flex-direction: row;
  margin: 10rpx;
}

/*item显示的图片大小*/
.item_image {
  /*display: flex;*/
  width: 260rpx;
  height: 170rpx;
}
/*item显示的summary文本信息*/
.item_summary_text {
  flex: 1;
  color: #dbdbdb;
  font-size: 28rpx;
  justify-content: center;
  padding: 10rpx;
}

/*item用户其他信息*/
.item_click_share_view {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 40rpx;
}
.item_user_other_message {
  padding-top:10rpx; 
  text-align: right;
  font-size: 30rpx;
  color: #dbdbdb;
}
.item_user_other_number {
  padding-top: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: #dbdbdb;
  margin: 0rpx 10rpx;
}


/* pages/kantu_2/kantu_2.wxss */

.head_view {
  padding: 50rpx 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /*background-color: cyan;*/
  border-bottom: 2rpx solid #dbdbdb;
}

.user_pic_image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}


/*其他用户的评论信息*/
.comment_view {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #dbdbdb;
}

.comment_view .comment_user_pic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

/* 主图 */
.main_image_view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  padding: 10rpx 0rpx;
}

/* 用户名称 */
.user_name_text {
  margin-top: 20rpx;
}


/*分割线*/
.line_view {
  width: 100%;
  height: 30rpx;
  background-color: #dbdbdb;
}
.user_comment {
  margin: 10rpx 0rpx;
  text-align: center;
}

/*其他用户品论信息*/
.comment_view .comment_user_message {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0rpx 20rpx;
}
.comment_view .comment_user_name {
  font-size: 30rpx;
  margin: 20rpx 0rpx;
}
.comment_view .comment_user_content {
  font-size: 20rpx;
}



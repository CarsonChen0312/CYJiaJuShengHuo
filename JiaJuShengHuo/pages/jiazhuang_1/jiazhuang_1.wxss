/* pages/jiazhuang_1/jiazhuang_1.wxss */

/*顶部View*/
.info_view {
  text-align: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #dbdbdb;
}

.section {
  margin: 50rpx;
}


.line_space_view {
  width: 100%;
  height: 20rpx;
}

/*item标题*/
.item_title_subject {
  display: inline-block;
  font-size: 40rpx;
  text-align: left;
  /*margin-bottom: 10rpx;*/
  /*padding: 20rpx;*/
  margin: 10rpx 20rpx;
}


/*详细文本底层view*/
.item_view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 10rpx 20rpx;
}

.item_view .item_guide_summary {
  flex: 1;
  color: #dbdbdb;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}

/*被浏览的数量*/
.item_user_visit {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  font-size: 30rpx;
  color: #dbdbdb;
  padding-right: 40rpx;
}



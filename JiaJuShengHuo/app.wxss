@import "wxParse/wxParse.wxss";
page {
  font-family: "Microsoft YaHei";
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}



/*item用户头像*/
.item_user_pic {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

/*item显示的图片大小*/
.item_image {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 260rpx;
  height: 170rpx;
}

/*item的用户显示的信息*/
.item_user_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 20rpx;
  width: 100%;
  height: 50rpx;
  border-bottom: 2rpx solid #dbdbdb;
}

/*用户名*/
.item_user_name {
  margin: 0rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 20rpx; 
  color: #dbdbdb;
}

/*HTML字符串*/
.html_view {
  padding: 20rpx;
}


/*详情页的顶部布局形式*/

/*顶部大图片*/
.cover_image {
  width: 100%;
  height: 400rpx;
}

/*用户头像外层View*/
.user_image_view {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #dbdbdb;
  margin-top: -75rpx;
}
/*用户头像*/
.user_image_view .user_image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid white;
  /*margin-bottom: 10rpx;*/
}

/*用户名称*/
.user_image_view .user_name_text {
  text-align: center;
  font-size: 30rpx;
  margin: 20rpx 0rpx;
}